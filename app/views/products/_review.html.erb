<article>
  <%= review.description %>
  <%= review.rating %>
  <div>
    <%= review.user_first_name %>
    <%= review.user_last_name %>
  </div>

  <% if session[:current_user]['id'] == review.user_id %>
    <%= link_to fa_icon('trash'), "/products/#{review.product_id}/reviews/#{review.id}(.:format)", class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</article>