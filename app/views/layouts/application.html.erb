<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/top_nav' %>

  <main class="container">

    <% flash.each do |type, msg| %>
      <div class="alert <%= (msg.include? "Oops")? "alert-danger error": "alert-info success" %>">
        <%= msg %>
      </div>
    <% end %>

    <% if active_sale? %>
    <p class="alert alert-info">
      There's an active <%= "Back to school sale"%> sale going on!
      <strong>Everything is <%= 15 %>% off!</strong>
    </p>
    <% end %>

    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>

